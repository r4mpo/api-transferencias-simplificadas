        "/user/register": {
            "post": {
                "tags": [
                    "Autenticação"
                ],
                "summary": "Register um novo usuário",
                "operationId": "0ffaa0cff400e6b9f3f6d7580b5206d8",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "João"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "joao@email.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "123456"
                                    },
                                    "individual_registration": {
                                        "type": "string",
                                        "example": "12345678901",
                                        "nullable": true
                                    },
                                    "legal_entity_number_registration": {
                                        "type": "string",
                                        "example": "12345678000195",
                                        "nullable": true
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "111": {
                        "description": "Usuário cadastrado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "response": {
                                            "properties": {
                                                "user": {
                                                    "properties": {
                                                        "id": {
                                                            "type": "integer",
                                                            "example": 1
                                                        },
                                                        "name": {
                                                            "type": "string",
                                                            "example": "João"
                                                        },
                                                        "email": {
                                                            "type": "string",
                                                            "example": "joao@email.com"
                                                        },
                                                        "email_verified_at": {
                                                            "type": "string",
                                                            "format": "date-time",
                                                            "example": "2025-03-04T16:33:44.000000Z"
                                                        },
                                                        "created_at": {
                                                            "type": "string",
                                                            "format": "date-time",
                                                            "example": "2025-03-04T16:33:44.000000Z"
                                                        },
                                                        "updated_at": {
                                                            "type": "string",
                                                            "format": "date-time",
                                                            "example": "2025-03-04T16:33:44.000000Z"
                                                        },
                                                        "individual_registration": {
                                                            "type": "string",
                                                            "example": "12345678901",
                                                            "nullable": true
                                                        },
                                                        "legal_entity_number_registration": {
                                                            "type": "string",
                                                            "example": "12345678000195",
                                                            "nullable": true
                                                        }
                                                    },
                                                    "type": "object"
                                                },
                                                "token": {
                                                    "type": "string",
                                                    "example": "eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..."
                                                }
                                            },
                                            "type": "object"
                                        },
                                        "response_code": {
                                            "type": "integer",
                                            "example": 111
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "333": {
                        "description": "Erro ao register usuário",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "response": {
                                            "type": "string",
                                            "example": "Erro desconhecido"
                                        },
                                        "response_code": {
                                            "type": "integer",
                                            "example": 333
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
